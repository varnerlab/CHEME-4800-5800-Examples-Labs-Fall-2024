function rbf(x::Tuple{Int,Int},y::Tuple{Int,Int}; Ïƒ = 1.0)::Float64
    d = sqrt((x[1] - y[1])^2 + (x[2] - y[2])^2);
    return exp(-d/(2*Ïƒ^2))
end;





